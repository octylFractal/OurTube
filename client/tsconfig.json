{
  "include": [
    "./js"
  ],
  "compilerOptions": {
    "rootDir": "./js",
    "target": "ES2015",
    "module": "es2015",
    "lib": [
      "ES6",
      "ES5",
      "DOM",
      "ScriptHost"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./typings"
    ]
  }
}